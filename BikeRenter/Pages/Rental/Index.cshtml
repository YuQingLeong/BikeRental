@page
@model BikeRenter.Pages.Rental.IndexModel
@{
}

<br>
<h2>List of Rentals</h2>
<a class='btn btn-primary btn-sm' href='/Rental/Create'>New Rental</a>
<table class="table">
    <thread>
        <tr>
            <th>ID</th>
            <th>Customer Name</th>
            <th>Bike Type</th>
            <th>rentalDuration</th>
            <th>rentalStartTime</th>
            <th>Action</th>
        </tr>
    </thread>
    <tbody>
        @foreach (var item in Model.listRentals)
        {
            <tr>
                <td>@item.RentalID</td>
                <td>@item.CustomerID</td>
                <td>@item.BikeID</td>
                <td>@item.rentalDuration</td>
                <td>@item.rentalStartTime</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/Rental/Edit?id=@item.RentalID">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Rental/Delete?id=@item.RentalID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
